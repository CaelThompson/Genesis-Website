---
 const basePath = import.meta.env.PROD ? '/Genesis/' : '/';
---

<title>Image Square Buttons</title>
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

<style>
    .unique-boxes-container {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
    }
    .unique-box {
        width: 50px;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        border-radius: 10px;
        border: 1px solid #696969;
        box-shadow: 1px 8px 12px rgba(0, 0, 0, 0.1);
        overflow: hidden; /* Ensure the image fits within the square */
    }
    .unique-box img {
        width: 100%; /* Image takes up the full size of the square */
        height: 100%; /* Image scales to fit the square */
        object-fit: cover; /* Ensures the image covers the area while maintaining its aspect ratio */
        transition: transform 0.3s ease; /* Optional: for smooth hover effect */
    }
    .unique-box:hover img {
        transform: scale(1.1); /* Optional: zoom in the image on hover */
    }

    .flex-container {
        display: flex;
        flex-direction: row;
        gap: 4px;
        align-items: center;
        justify-content: center;
    }

    .flex-container a, .flex-container button {
        text-decoration: none;
    }

    .learn-more {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 5px 15px;
        font-size: 14px;
        font-weight: 600;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease-out;
        border-radius: 50px;
        background-color: #28a745;
        color: white;
    }
    .learn-more:hover {
        background-color: #218838;
    }

    .explore-solutions {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: 2px solid #28a745;
        color: #28a745;
        background-color: transparent;
        border-radius: 50px;
        font-size: 14px;
        font-weight: 600;
        padding: 5px 10px;
        cursor: pointer;
    }
    .explore-solutions:hover {
        background-color: #e9f5e9;
    }
</style>

<body>
    <div class="unique-boxes-container" id="boxesContainer">
        <!-- Example square image buttons wrapped in anchor tags -->
        <a href=`${basePath}about` class="unique-box">
            <img src="https://via.placeholder.com/50" alt="Image 1" />
        </a>
        <a href=`${basePath}product` class="unique-box">
            <img src="https://via.placeholder.com/50" alt="Image 2" />
        </a>
        <a href=`${basePath}news` class="unique-box">
            <img src="https://via.placeholder.com/50" alt="Image 3" />
        </a>
    </div>

    <div class="flex-container">
        <a href=`${basePath}about` class="learn-more">Learn More</a>
        <a href=`${basePath}product.html?visibility=show`>
            <button class="explore-solutions">Explore Our Solutions</button>
        </a>
        <a href=`${basePath}news`>
            <button class="explore-solutions">News</button>
        </a>
    </div>
</body>

