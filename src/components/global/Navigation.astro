---
import Container from "./Container.astro";
const basePath = import.meta.env.PROD ? '/Genesis/' : '/';
---

<Container>
    <nav class="">
        <div x-data="{ open: false }" class="flex flex-col mx-auto md:items-center md:justify-between md:flex-row">
            <div class="p-4 flex flex-row items-center justify-between">
                <a href={`${basePath}home`}>
                    <img src={`${basePath}Img/gen-logo2.png`} alt="relan logo" class="w-20 cursor-pointer">
                </a>
                <button class="md:hidden rounded-lg focus:outline-none focus:shadow-outline" @click="open = !open">
                    <svg fill="currentColor" viewBox="0 0 20 20" class="w-6 h-6">
                        <path x-show="!open" fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM9 15a1 1 0 011-1h6a1 1 0 110 2h-6a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                        <path x-show="open" fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                    </svg>
                </button>
            </div>
            <div class="p-4 flex flex-row items-center justify-between">
                
            </div>
            <div>
                <ul>
                    <li :class="{'flex': open, 'hidden': !open}" class="flex-col flex-grow pb-4 md:pb-0 hidden md:flex md:justify-end md:flex-row">
                        <a href={'/'}class="px-4 py-2 mt-2 text-sm font-semibold text-gray-900 md:bg-transparent bg-gray-200 rounded-lg hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline">Main Page</a>
                        <a href={`${basePath}home`} class="px-4 py-2 mt-2 text-sm font-semibold text-gray-900 md:bg-transparent bg-gray-200 rounded-lg hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline">Home</a>
                        <a href={`${basePath}about`} class="px-4 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline text-gray-700">About</a>
                        <a href={`${basePath}product`} class="px-4 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline text-gray-700">Products</a>
                        <a href={`${basePath}staff`} class="px-4 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline text-gray-700">Meet The Team</a>
                        <a href={`${basePath}careers`} class="px-4 py-2 mt-2 text-sm font-semibold bg-transparent rounded-lg hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline text-gray-700">Careers</a>
                    </li>
                </ul>
            </div>
            <div class="hidden md:block">
                <a href={`${basePath}contact`}>
                    <button class="to-main inline-flex gap-2 items-center from-green-700 hover:to-green-700 duration-200 shadow bg-gradient-to-b rounded-full text-white py-2 px-4">Contact Us</button>
                </a>
            </div>
        </div>
    </nav>
</Container>



