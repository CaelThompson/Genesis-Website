---
import { articles } from "./articleStorage";

const { title, description, image, url, date, type } = Astro.props;
---

<a href={url} class="flex flex-col md:flex-row items-center justify-center gap-2 md:gap-[7vw] mb-6 md:mb-0 p-4 hover:bg-gray-200">
    <!-- Date -->
    <div class="w-24 self-start md:self-center">
      <p class="text-lg font-semibold text-gray-700 dark:text-gray-300">{date}</p>
    </div>
  
    <!-- Title & Description -->
    <div class="w-full md:w-1/3">
      <h3 class="text-xl font-bold text-gray-900 dark:text-white">{title}</h3>
      <p class="mt-2 text-gray-600 dark:text-gray-300">{description}</p>
    </div>
  
    <!-- Image -->
    <div class="w-full md:w-1/3 h-auto overflow-hidden">
      <img src={image} alt={title} class="w-full h-full object-cover rounded-lg">
    </div>
  </a>