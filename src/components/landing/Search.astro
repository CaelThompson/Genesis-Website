---
import Container from "../global/Container.astro";
import SearchBar from '../MadeForProject/SearchBar.astro';
import Articles from '../MadeForProject/TrendingArt.astro';
import Titles from '../MadeForProject/TrendingMid.astro';

const basePath = import.meta.env.PROD ? '/Genesis/' : '/';

---
<style>
body {
  background: url('https://i.pinimg.com/originals/cf/a1/bb/cfa1bb7ec782fc1820b2b1b07dc00710.jpg') no-repeat center center fixed;
  background-size: cover;
}

.rowSe {
  display: flex;
  justify-content: space-evenly; /* Distributes items evenly */
  background-color: white;
  border: 2px solid #ccc;
  padding: 20px 10px; /* 20px for top/bottom, 30px for left/right */
  border-radius: 24px;
  background-color: #ffffffd0;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px; /* Adds space at the bottom */
}


.rowSe > * {
  flex: 1;
  margin: 0; /* No extra space around items */
}
</style>

<Container>
    <section>
        <div class="flex flex-col md:flex-row justify-between items-center md:items-start gap-10">
            <SearchBar />
        </div>
    </section>

    <section class="rowSe">
        <div>
            <Articles />
        </div>
        <div>
            <Titles />
        </div>
        <div>
            Stock
        </div>
    </section>


</Container>



