    border-bottom-right-radius: 8px;
    border-bottom-left-radius: 8px;
    z-index:1;
  }

  .grid-item:hover .grid-item-text {
    background-color: #215a47;
    border-radius: 8px;
    border-top-left-radius: 0px;
    border-top-right-radius: 0px;
  }

  .grid-item-date {
    position: absolute;
    top: 10px;
    right: 20px;
    background-color: rgba(62, 95, 89, 0.8);
    color: #fff; 
    padding: 5px 10px;
    border-radius: 4px;
    font-size: 14px;
    font-weight: bold;
  }
</style>

<Container>
  <NewsNav/>
  <!-- Trending Articles text -->
  <div>
    <div class="flex justify-between items-center px-5 mx-5">
      <h1 class="text-3xl font-bold text-gray-900 ml-24">Highlights</h1>
      
    </div>
  </div>

  <!-- Article Box -->
  <div class="grid-container">
    {Array.from({ length: 1 }).map(() => {
      const { title, description, image, url, date } = getUniqueRandomItem();
      return (
        <a href={url} class="grid-item" style="grid-column: span 3; margin-bottom: 190px;">
          <div class="grid-item">
            <div
              class="grid-item-image group"
              style={`background-image: url('${image}');`}
            ></div>
            <time datetime={date} class="grid-item-date">
              {new Date(date).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}
            </time>
            <div class="grid-item-text" >
              <h2 class="text-[20px]">{title}</h2>
              <p>{description}</p>
            </div>
          </div>
        </a>
      );
    })}
    {Array.from({ length: 6 }).map(() => {
      const { title, description, image, url, date } = getUniqueRandomItem();
      return (
        <a href={url} class="grid-item" style="height: 150%;">
