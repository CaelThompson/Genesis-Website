---
import Container from "../../global/NewsContainer.astro";
const basePath = import.meta.env.PROD ? "/Genesis/" : "/";
---

<style>
    .heading {
        background: linear-gradient(235deg, #1e6e5e, #36c2a6, #1d4f45);
        padding: 0px;
        color: aliceblue;
        font-size: 2rem;
        font-weight: 600;
        text-transform: uppercase;
        display: flex;
        align-items: center;
        font-family: "Franklin Gothic Medium", "Arial Narrow", Arial, sans-serif;
        position: fixed;
        width: 100%;
        left: 0;
        top: 0;
        z-index: 10;
    }

    .logo {
        width: 50px;
        height: auto;
        margin-right: 30px;
        margin-left: 30px;
    }

    .article-row {
        text-transform: capitalize;
    }
    .article-row li {
        margin-right: 80px;
        margin-left: 80px;
        font-size: 16px;
        font-weight: normal;
        justify-content: center;
        padding-top: 5px;
    }
</style>
<Container>
    <!-- Responsive Navigation Bar -->
    <nav
        class="flex flex-col mx-auto md:items-center md:justify-between md:flex-row p-4"
    >
        <div class="flex flex-row items-center justify-between w-full">
            <!-- Logo -->
            <!-- Mobile Menu Button -->
        </div>
    </nav>

    <!-- Main Heading Section -->
    <div
        class="heading"
        style="display:flex; flex-direction: row; padding: 20px 50px; align-items: center;"
    >
        <img
            src=`${basePath}Img/News2Img/madrigalLogo2.png`
            alt="Logo"
            style="width: 150px; height: auto; margin-right: -30px; margin-bottom: 20px;"
        />
        <div style="flex: 1; text-align: left;">
            <h1 class="text-3xl font-semibold">The Madrigal</h1>
            <h2 class="text-3xl font-semibold">International Times</h2>
        </div>

        <!-- Article Row Section -->
        <!--<ul class="article-row text-lg" style="flex: 2; display:flex; margin: 0; padding: 0; list-style: none;">
            <li class="text-center">
                <a href="/news2" class="text-white hover:underline">
                    The Hub
                </a>
            </li>
            <li class="text-center">
                <a href="/article2" class="text-white hover:underline">
                    Features
                </a>
            </li>
            <li class="text-center">
                <a href="/interview2" class="text-white hover:underline">
                    Spotlights
                </a>
            </li>
            <li class="text-center">
                <a href="/aboutus2" class="text-white hover:underline">
                    About Us
                </a>
            </li>
        </ul>
    -->
        <!--Menu button -->
        <div class="flex space-x-4 mr-10 items-center">
            <a
                href=`${basePath}`
                class="px-5 py-3 text-base border border-white text-white rounded transition-transform duration-300 hover:scale-110 block w-fit text-center"
            >
                Main
            </a>
            <a
                href=`${basePath}news2`
                class="px-5 py-3 text-base border border-white text-white rounded transition-transform duration-300 hover:scale-110 block w-fit text-center"
            >
                Home
            </a>
        </div>
        <div
            style="display: flex; flex-direction: column; gap: 5px; position: relative; cursor: pointer;"
            onclick="toggleMenu()"
        >
            <div
                style="display: grid; grid-template-columns: repeat(3, 10px); grid-gap: 5px;"
            >
                <span
                    style="width: 10px; height: 10px; background-color: aliceblue; border-radius: 50%;"
                ></span>
                <span
                    style="width: 10px; height: 10px; background-color: aliceblue; border-radius: 50%;"
                ></span>
                <span
                    style="width: 10px; height: 10px; background-color: aliceblue; border-radius: 50%;"
                ></span>
                <span
                    style="width: 10px; height: 10px; background-color: aliceblue; border-radius: 50%;"
                ></span>
                <span
                    style="width: 10px; height: 10px; background-color: aliceblue; border-radius: 50%;"
                ></span>
                <span
                    style="width: 10px; height: 10px; background-color: aliceblue; border-radius: 50%;"
                ></span>
                <span
                    style="width: 10px; height: 10px; background-color: aliceblue; border-radius: 50%;"
                ></span>
                <span
                    style="width: 10px; height: 10px; background-color: aliceblue; border-radius: 50%;"
                ></span>
                <span
                    style="width: 10px; height: 10px; background-color: aliceblue; border-radius: 50%;"
                ></span>
            </div>
            <!-- Dropdown stays the same -->
        </div>
    </div>
    <ul
        id="dropdown-menu"
        style="position: absolute; top: 85px; right: -50px; background-color: #1d4f45; color: aliceblue; list-style: none; padding-top: 5px; padding-bottom: 5px; border: 1px solid aliceblue; border-radius: 5px; transform: translateY(-200px); width: 100vw; text-transform: capitalize; transition: transform 0.3s ease-in-out, opacity 0.4s ease-in-out; opacity: 100; display: none;"
    >
        <style>
            #dropdown-menu li:hover {
                background-color: #36c2a6;
                color: #ffffff;
                cursor: pointer;
            }
            #dropdown-menu li a {
                display: block;
                width: 100%;
                height: 100%;
                text-decoration: none;
                color: inherit;
            }
        </style>
        <li
            style="padding: 5px 30px; cursor: pointer; font-size: 20px; text-align: center; font-family:'Times New Roman'; font-weight: lighter;"
            onclick="window.location.href='/news2'"
        >
            <a href=`${basePath}news2` style="color: inherit;">The Hub</a>
        </li>
        <li
            style="padding: 5px 30px; cursor: pointer; font-size: 20px; text-align: center; font-family:'Times New Roman'; font-weight: lighter;"
            onclick="window.location.href='/article2'"
        >
            <a href=`${basePath}article2` style="color: inherit;">Features</a>
        </li>
        <li
            style="padding: 5px 30px; cursor: pointer; font-size: 20px; text-align: center; font-family:'Times New Roman'; font-weight: lighter;"
            onclick="window.location.href='/interview2'"
        >
            <a href=`${basePath}interview2` style="color: inherit;"
                >Spotlights</a
            >
        </li>
        <li
            style="padding: 5px 30px; cursor: pointer; font-size: 20px; text-align: center; font-family:'Times New Roman'; font-weight: lighter;"
            onclick="window.location.href='/aboutus2'"
        >
            <a href=`${basePath}aboutus2` style="color: inherit;">About Us</a>
        </li>
    </ul>
</Container>

<script>
    let menuVisible = false;

    function toggleMenu(): void {
        const menu = document.getElementById("dropdown-menu");
        menuVisible = !menuVisible;
        if (menu) {
            menu.style.display = "block";
            menu.style.opacity = menuVisible ? "1" : "0";
            menu.style.transform = menuVisible
                ? "translateY(0)"
                : "translateY(-200px)";
        }
    }

    // Extend the Window interface to include toggleMenu
    declare global {
        interface Window {
            toggleMenu: () => void;
        }
    }
    window.toggleMenu = toggleMenu;

    // Deprecated
    function navigateTo(option: "articles" | "interviews" | "home"): void {
        if (option === "articles") {
            window.location.href = "/articles";
        } else if (option === "interviews") {
            window.location.href = "/interviews";
        } else if (option === "home") {
            window.location.href = "/news";
        }
    }

    // Add a line separator between options in the dropdown menu
    const dropdownMenu = document.getElementById("dropdown-menu");
    if (dropdownMenu) {
        const options = dropdownMenu.querySelectorAll("li");
        options.forEach((option, index) => {
            if (index < options.length - 1) {
                const separator = document.createElement("hr");
                separator.style.border = "1px solid aliceblue";
                separator.style.margin = "5px 0";
                option.after(separator);
            }
        });
    }
</script>
