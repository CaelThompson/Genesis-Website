    showSection('section2', section2Visibility);
    showSection('section3', section3Visibility);
    showSection('section4', section4Visibility);
    showSection('section5', section5Visibility);
    showSection('section6', section6Visibility);
    showSection('section7', section7Visibility);
  </script>

