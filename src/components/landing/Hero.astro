---
import Container from "../global/Container.astro";

---

<Container>
    <section class="">
        <div class="flex flex-row justify-center">
            <div class="flex flex-col gap-12 justify-center mt-16 ">
                <div class="flex flex-col gap-3">
                    <h1 class="text-center md:text-left font-medium text-5xl md:text-7xl bg-gradient-to-r from-zinc-900 to-zinc-600 block bg-clip-text text-transparent">Coconut Oil For <br> Better Health</h1>
                    <p class="text-zinc-600 leading-6 text-md font-normal md:w-1/2 text-center md:text-left">Lorem ipsum dolor, sit amet consectetur adipisicing elit. Culpa accusamus quae molestiae est dolores saepe. Porro temporibus cum dolores blanditiis?</p>
                </div>
                <div class="flex-row flex gap-4 items-center justify-center md:justify-start">
                    <div>
                        <button class="inline-flex items-center gap-2 text-sm font-semibold shadow  to-main from-green-700 hover:to-green-700 duration-200 bg-gradient-to-b rounded-full  text-white px-5 py-3">Order Now 
                        </button>
                    </div>
                    <div>
                        <button class="inline-flex group items-center gap-2 shadow ring-inset text-main ring-2 ring-main hover:bg-main/10 backdrop-blur rounded-full text-sm font-semibold  px-3 py-2.5">Explore More <span><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor" class="w-3 h-3 group-hover:translate-x-0.5 group-hover:duration-300">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12h15m0 0l-6.75-6.75M19.5 12l-6.75 6.75" />
                          </svg>
                          </span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="mt-20 hidden md:block">
                <img src="/public/hero_img_3.png" class="w-[450px]" alt="">
            </div>
        </div>
    
        
    </section>
</Container>
