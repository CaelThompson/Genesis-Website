---
import Container from "../../global/NewsContainer.astro";
import { articles } from "./Article3Storage.js";
import NewsNav from "../News3/News3Nav.astro";

const processedArticles = articles
  .map(article => ({
    ...article,
    url: `/article3/${article.slug}`, // Derive 'url' from 'slug'
    type: article.type || "default"  // Add default type if missing
  }))
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime()); // Sort by most recent first
---

<style>
  .articles-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 20px;
    margin: 40px 40px;
  }

  .article-box-horizontal {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  background-color: #f4f4f4;
  border-radius: 8px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  width: 48%;
  box-sizing: border-box;
  text-decoration: none;
  color: inherit;
  transition: transform 0.2s ease;
}

.article-box-horizontal:hover {
  transform: translateY(-3px);
}

.article-image-horizontal {
  flex: 0 0 40%; 
  height: 100%;
  min-height: 150px;
  border-radius: 8px 0 0 8px;
  background-size: cover;
  background-position: center;
}

.article-text-horizontal {
  flex: 1; 
  display: flex;
  flex-direction: column;
  padding: 20px;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
}


  .article-text-horizontal h2 {
    font-size: 20px;
    margin-bottom: 10px;
    font-weight: bold;
  }

  .article-text-horizontal p {
    margin-bottom: 10px;
    line-height: 1.4;
  }

  .article-date-horizontal {
    font-size: 12px;
    font-weight: bold;
    color: #555;
    margin-top: auto;
    text-align: right;
  }

  @media (max-width: 768px) {
    .article-box-horizontal {
      flex-direction: column;
      width: 100%;
    }

    .article-image-horizontal {
      width: 100%;
      height: 200px;
      border-radius: 8px 8px 0 0;
      margin-right: 0;
    }

    .article-text-horizontal {
      padding: 15px;
    }

    .article-date-horizontal {
      text-align: left;
      margin-top: 10px;
    }
  }
</style>

<Container>
  <NewsNav />
  <div class="ml-10 mt-10">
    <h1 class="text-3xl font-bold text-gray-900 mb-5">Dispatches from the West</h1>
    <p style="margin: 0px 30px 40px 0px">
      Explore the latest stories from the frontlinesâ€”local dispatches, investigative deep-dives, and timely reports covering the issues that matter most. From the streets of Houston to global headlines, our articles deliver sharp analysis, compelling storytelling, and thoughtful perspectives. Every piece is crafted with care by our team of seasoned journalists, driven by truth and proudly based right here in the Lone Star State.
    </p>
    
  </div>
  <div class="articles-container">
    {processedArticles.map(({ title, description, image, url, date }) => (
      <a href={url} class="article-box-horizontal">
        <div
          class="article-image-horizontal"
          style={`background-image: url('${image}');`}
        ></div>
        <div class="article-text-horizontal">
          <h2>{title}</h2>
          <p>{description}</p>
          <time datetime={date} class="article-date-horizontal">
            {new Date(date).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
        </div>
      </a>
    ))}
  </div>
</Container>
