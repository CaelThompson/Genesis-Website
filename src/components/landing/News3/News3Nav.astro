---
import Container from "../../global/NewsContainer.astro";
const basePath = import.meta.env.PROD ? "/Genesis/" : "/";
---

<style>
    body {
  padding-top: 150px;
}
    .heading {
        margin-bottom: 30px;
        background-color: #aa7e17;
        background-image: url("/Img/News3Img/oldpaper.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        background-blend-mode: multiply;
        padding: 80px 80px; /* original padding left and right */
        color: aliceblue;
        font-size: 2rem;
        font-weight: 600;
        text-transform: uppercase;
        display: flex;
        align-items: center;
        justify-content: space-between; /* spread children */
        font-family: "Copperplate Gothic Light", "Franklin Gothic Medium",
            "Arial Narrow", Arial, sans-serif;
        position: fixed;
        width: 100%;
        left: 0;
        top: 0;
        z-index: 10;
        height: 80px; /* control height so it's visible */
    }

    .button {
        display: inline-block;
        padding: 8px 16px;
        border: 2px solid white;
        border-radius: 8px;
        background-color: transparent;
        color: white;
        text-decoration: none;
        font-weight: bold;
        transition:
            border-color 0.3s,
            color 0.3s;
        cursor: pointer;
        margin-right: 15px; /* spacing between buttons */
    }

    .button:hover {
        border-color: black;
        color: black;
        background-color: transparent;
    }

    .heading-buttons {
        display: flex;
        align-items: center;
    }

    .heading-title {
        text-align: center;
        flex: 1; /* take remaining space */
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 0; /* no gap, close stacking */
    }

    .heading-title h1 {
        margin: 0;
        line-height: 1;
        font-size: 2.5rem;
        font-weight: 600;
    }

    .menu-button {
        /* right aligned menu section */
        display: flex;
        flex-direction: column;
        align-items: center;
        cursor: pointer;
    }

    .menu-button img {
        width: 200px;
    }

    .menu-text {
        color: white;
        font-size: 24px;
        margin-top: 5px;
    }
    
</style>

<Container>
    <div class="heading">
        <!-- Buttons left -->
        <div class="heading-buttons">
            <a href="/" class="button">Main</a>
            <a href="/news3" class="button">Home</a>
        </div>

        <!-- Center Heading Text -->
        <div class="heading-title">
            <h1>Lone</h1>
            <h1>Star</h1>
            <h1>Outlet</h1>
        </div>

        <!-- Right Menu Button -->
        <div class="menu-button" onclick="toggleMenu()">
            <img
                src={`${basePath}Img/News3Img/cowboyhat.png`}
                class="tilt-on-hover"
                alt="Menu"
            />
            <p class="menu-text">Menu</p>
        </div>
    </div>

    <!-- Dropdown menu and script go here -->
</Container>

<script>
    let menuVisible = false;

    function toggleMenu() {
        const menu = document.getElementById("dropdown-menu");
        menuVisible = !menuVisible;
        if (menu) {
            menu.style.transform = menuVisible
                ? "translateX(0)"
                : "translateX(100%)";
        }
    }
    window.toggleMenu = toggleMenu;
</script>
