    let menuVisible = false;
    
    function toggleMenu(): void {
        const menu = document.getElementById('dropdown-menu');
        menuVisible = !menuVisible;
        menu.style.transform = menuVisible ? 'translateX(0)' : 'translateX(100%)';
    }
        // Extend the Window interface to include toggleMenu
        declare global {
            interface Window {
                toggleMenu: () => void;
            }
        }
        window.toggleMenu = toggleMenu;
        
        // Deprecated
        function navigateTo(option: 'articles' | 'interviews' | 'home'): void {
            if (option === 'articles') {
            window.location.href = '/articles';
            } else if (option === 'interviews') {
            window.location.href = '/interviews';
            } else if (option === 'home') {
            window.location.href = '/news';
            }
        }

        // Add a line separator between options in the dropdown menu
        const dropdownMenu = document.getElementById('dropdown-menu');
        if (dropdownMenu) {
            const options = dropdownMenu.querySelectorAll('li');
            options.forEach((option, index) => {
            if (index < options.length - 1) {
                const separator = document.createElement('hr');
                separator.style.border = '1px solid aliceblue';
                separator.style.margin = '5px 0';
                option.after(separator);
            }
            });
        }
        
    </script>
