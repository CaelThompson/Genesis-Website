---
import Container from "../../global/NewsContainer.astro";
import {articles} from "../../landing/NewsPage/News1Storage.js";
---

<style>
    .heading{
        background-color:#001f3d;
        padding: 20px;
        color:aliceblue;
        font-size: 2rem;
        font-weight: 600;
        text-transform:uppercase;
        display:flex;
        border-bottom: 2px solid aliceblue;
        align-items:center;
        font-family:'Lucida Sans', 'sans-serif';
        position: fixed;
        width: 100%;
        left: 0;
        top: 0;
        z-index: 10;
        
    }
    .logo{
        width: 50px;
        height: auto;
        margin-right: 30px;
        margin-left:30px;
    }

    .article-row-container{
        margin-top: 40px;
        padding: 10px;
        background-color:#001f3d;
        position: fixed;
        width: 100%;
        left: 0;
        
        
       
        

    }
    .article-row{
        display: flex;
        gap: 20px;
        flex: 2;
        text-transform: capitalize;
    }
    .article-row li {
        flex: 1;
        text-align:center;
        font-size:16px;
        font-weight: normal;
        justify-content: center;
    }
    .article-row li:not(:last-child){
      border-right: 2px solid aliceblue;
    }

</style>
<Container>
    <!-- Responsive Navigation Bar -->
    <nav class="flex flex-col mx-auto md:items-center md:justify-between md:flex-row p-4">
      <div class="flex flex-row items-center justify-between w-full">
          <!-- Logo -->
          <!-- Mobile Menu Button -->
          <button class="md:hidden rounded-lg focus:outline-none focus:shadow-outline" @click="open = !open">
              <svg fill="currentColor" viewBox="0 0 20 20" class="w-6 h-6">
                  <path x-show="!open" fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM9 15a1 1 0 011-1h6a1 1 0 110 2h-6a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                  <path x-show="open" fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
          </button>
      </div>
    </nav>
  
    <!-- Main Heading Section -->
    <div class="heading">
      <h1 class="text-3xl font-semibold text-center">The Vanguard Journal</h1>
    </div>
  
    <!-- Article Links Section (on a new row) -->
    <div class="article-row-container">
      <ul class="article-row flex gap-5 text-white text-lg">
          {articles.map((article) => (
              <li class="flex-1 text-center">
                  <a href={`/news1/${article.slug}`} class="text-white hover:underline">
                      {article.slug}
                  </a>
              </li>
          ))}
      </ul>
    </div>
  
  </Container>
  