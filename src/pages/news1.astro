---
import BaseHead from "../components/BaseHead.astro";
import BaseLayout from "../layouts/News1Layout.astro";
import NewsNav from "../components/landing/News1/News1Nav.astro";
import { articles } from "../components/landing/News1/Article1Storage.js";

const basePath = import.meta.env.PROD ? '/Genesis/' : '/';
---

<BaseLayout>
  <head>
    <BaseHead />
    <title>News - Genesis Blog</title>
    <link rel="icon" href="/Img/Logos/modern logo for Vanguard Journal with less busy center and shield with gold pen and the words Vangua.jpeg" type="image/x-icon">
    <link rel="shortcut icon" href="/Img/Logos/modern logo for Vanguard Journal with less busy center and shield with gold pen and the words Vangua.jpeg" type="image/x-icon">
  </head>

  <NewsNav />

  <section class="pt-32 pb-16 bg-gray-50 min-h-screen">
    <h1 class="text-4xl font-bold text-center mb-12 text-gray-900">Latest Articles</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 px-6 max-w-7xl mx-auto">
      {articles.map((article) => (
        <a href={`${basePath}news1/${article.slug}`} class="group block rounded-lg shadow-md overflow-hidden bg-white flex flex-col hover:shadow-lg transition-shadow">
          <div class="h-48 overflow-hidden">
            <img 
              src={article.image} 
              alt={article.title} 
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" 
            />
          </div>

          <div class="flex flex-col flex-grow p-4">
            <p class="text-sm text-gray-500 mb-1">{article.date}</p>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{article.title}</h3>
            <p class="text-gray-600 flex-grow">{article.description}</p>
            <span class="text-blue-600 mt-4 inline-block hover:underline">Read More â†’</span>
          </div>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>